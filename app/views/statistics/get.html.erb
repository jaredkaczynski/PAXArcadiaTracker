<div class="row justify-content-center text-white">
  <h1>PAX XP Arcadia Tracker</h1>
</div>
<div class="row justify-content-center text-white">
  <p>Simple tracker to see who's completed it fastest</p>
</div>

<div class="card row col-md-10 offset-md-1">
  <div class="table-responsive">
    <table id="players"  class="table table-bordered">
      <thead>
      <tr>
        <th>Username</th>
        <th>Time Taken</th>
        <th>Time Completed</th>
      </tr>
      </thead>
      <tbody>
      <% @players.each do |player| %>
        <tr>
          <td><%= player.username %></td>
          <td data-sort="<%= player.time_taken %>"><%= formatted_duration(player.time_taken) %></td>
          <td data-sort="<%= player.time_completed.to_i %>"><%= player.time_completed %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>

<script>
    $(document).ready(function() {
        $('#players').DataTable( {
            "columns": [
                null,
                { "orderDataType": "dom-text" },
                { "orderDataType": "dom-text", "type": "numeric" },
            ]
        } );
    } );
</script>